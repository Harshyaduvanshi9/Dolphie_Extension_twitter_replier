{
    "manifest_version": 3,
    "name": "Tweet Reply Extender",
    "version": "1.0",
    "description": "Enhance Twitter replies",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    }
  }
  